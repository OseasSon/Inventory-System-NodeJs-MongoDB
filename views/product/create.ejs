<html lang="en">
<%- include("../partials/head.ejs") %>

<body class="bg-white font-sans">
  <%- include("../partials/nav.ejs") %>

  <div class="container mx-auto px-4 max-w-screen-md">

    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-bold">Create New Product</h2>
      <button form="create-form" type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded mr-2">
        Create
      </button>
    </div>

    <div class="bg-gray-100 shadow overflow-hidden sm:rounded-lg mb-4">
      <form id="create-form" action="/products" method="POST" enctype="multipart/form-data" class="px-4 py-5 sm:px-6">
        <div class="mb-4 sm:grid sm:grid-cols-3 sm:gap-4">
          <label for="name" class="text-sm font-medium text-gray-500">Name</label>
          <input type="text" id="name" name="name" required class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
        </div>
        <div class="mb-4 sm:grid sm:grid-cols-3 sm:gap-4">
          <label for="description" class="text-sm font-medium text-gray-500">Description</label>
          <textarea type="text" id="description" name="description" required class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"></textarea>
        </div>
        <div class="mb-4 sm:grid sm:grid-cols-3 sm:gap-4">
          <label for="manufacturer" class="text-sm font-medium text-gray-500">Manufacturer</label>
          <input type="text" id="manufacturer" name="manufacturer" required class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
        </div>
        <div class="mb-4 sm:grid sm:grid-cols-3 sm:gap-4">
          <label for="price" class="text-sm font-medium text-gray-500">Price</label>
          <input type="number" id="price" name="price" required class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
        </div>
        <div class="mb-4 sm:grid sm:grid-cols-3 sm:gap-4">
          <label for="image" class="text-sm font-medium text-gray-500">Image</label>
          <input type="file" id="image" name="image" required class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
        </div>
      </form>
    </div>
  </div>
</body>
</html>
