<html lang="en">
<%- include("../partials/head.ejs") %>

<body class="bg-white">
  <%- include("../partials/nav.ejs") %>

  <div class="container mx-auto px-4">

    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-bold">Create New Product</h2>
    </div>

    <div class="bg-gray-100 shadow overflow-hidden sm:rounded-lg mb-4 w-1/2 mx-auto">
      <div class="px-4 py-5 sm:px-6">
        <form action="/products" method="POST">
          <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <label for="name" class="text-sm font-medium text-gray-500">Name:</label>
            <input type="text" id="name" name="name" required class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          </div>
          <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <label for="id" class="text-sm font-medium text-gray-500">ID:</label>
            <input type="text" id="id" name="id" required class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          </div>
          <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <label for="brand" class="text-sm font-medium text-gray-500">Brand:</label>
            <input type="text" id="brand" name="brand" required class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          </div>
          <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <label for="price" class="text-sm font-medium text-gray-500">Price:</label>
            <input type="number" id="price" name="price" required class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          </div>
          <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <label for="image" class="text-sm font-medium text-gray-500">Image:</label>
            <input type="text" id="image" name="image" required class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          </div>
          <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <div class="sm:col-span-3 flex justify-center">
              <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Submit
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
</html>
