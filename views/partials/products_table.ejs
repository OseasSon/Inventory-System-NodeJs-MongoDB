<div id="mb-24">
  <% if (products.length > 0) { %>
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-100">
      <tr>
        <th class="px-6 py-3 text-center text-xs text-gray-500 uppercase tracking-wider">Image</th>
        <th class="px-6 py-3 text-center text-xs text-gray-500 uppercase tracking-wider">ID</th>
        <th class="px-6 py-3 text-center text-xs text-gray-500 uppercase tracking-wider">Name</th>
        <th class="px-6 py-3 text-center text-xs text-gray-500 uppercase tracking-wider">Manufacturer</th>
        <th class="px-6 py-3 text-center text-xs text-gray-500 uppercase tracking-wider">Price</th>
      </tr>
    </thead>
    <tbody class="bg-gray-50 divide-y divide-gray-200">
      <% products.forEach(product => { %>
        <tr>
          <td class="px-6 py-4">
            <img src="<%= product.image %>" alt="<%= product.name %>" class="w-10 h-10 object-cover">
          </td>
          <td class="px-6 py-4">
            <%= product._id %>
          </td>
          <td class="px-6 py-4">
            <a href="/products/<%= product._id %>" class="text-blue-500 hover:text-blue-800">
              <%= product.name %>
            </a>
          </td>
          <td class="px-6 py-4">
            <%= product.manufacturer %>
          </td>
          <td class="px-6 py-4">
            <%= product.price %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <!-- Pagination links -->
  <div class="flex items-center justify-between mt-4">
    <!-- Previous Page Link -->
    <% if (page > 1) { %>
      <a href="/products?page=<%= page - 1 %>" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded">
        Previous
      </a>
    <% } else { %>
      <span class="py-2 px-4"></span>
    <% } %>

    <!-- Page numbers -->
    <span class="py-2 px-4">Page <%= page %> of <%= totalPages %></span>

    <!-- Next Page Link -->
    <% if (page < totalPages) { %>
      <a href="/products?page=<%= page + 1 %>" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded">
        Next
      </a>
    <% } else { %>
      <span class="py-2 px-4"></span>
    <% } %>
  </div>

  <% } else { %>
    <p class="text-red-500">There are no products to display...</p>
  <% } %>
</div>
